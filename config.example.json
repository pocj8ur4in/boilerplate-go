{
  "logger": {
    "level": "debug"
  },
  "database": {
    "host": "localhost",
    "port": 35432,
    "user": "boilerplate_user",
    "password": "boilerplate_password",
    "db_name": "boilerplate",
    "ssl_mode": false,
    "max_conns": 10,
    "max_idle": 5
  },
  "redis": {
    "addrs": ["localhost:36379"],
    "password": "",
    "db": 0
  },
  "server": {
    "host": "0.0.0.0",
    "port": 38080,
    "read_timeout": 15,
    "write_timeout": 15,
    "idle_timeout": 60,
    "shutdown_timeout": 30,
    "max_request_size": 10485760,
    "compression": {
      "enabled": true,
      "level": 6,
      "format": "gzip"
    },
    "cors": {
      "enabled": true,
      "allowed_origins": ["*"],
      "allowed_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowed_headers": ["Content-Type", "Authorization", "X-Request-ID"]
    },
    "rate_limit": {
      "global": {
        "enabled": true,
        "requests": 10000,
        "window": 60
      },
      "ip": {
        "enabled": true,
        "requests": 60,
        "window": 60
      },
      "endpoint": {
        "enabled": true,
        "requests": 30,
        "window": 60
      }
    }
  },
  "jwt": {
    "issuer": "boilerplate",
    "audience": "boilerplate_audience",
    "secret_key": "your-super-secret-jwt-key-change-this-in-production",
    "access_token_ttl": 900000000000,
    "refresh_token_ttl": 604800000000000
  }
}
